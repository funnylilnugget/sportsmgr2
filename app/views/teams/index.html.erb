<br>

    <center><%= link_to "Create Team", new_team_path%></center><br>

    <h2>Team List</h2>
<br>
    <table align="center">
      <tr>
        <th>Team Name:</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
        <% @team.each do |t| %>
          <tr id="<%=t.id%>">
            <td><%= t.name %></td>
            <td><a href="/teams/<%= t.id %>/edit"><img src="/assets/edit-button.png"></a></td>
            <td><%= link_to "Delete", team_path(t.id), remote: true, method: :delete, data: { confirm: 'Are you sure?'} %></td>
              </tr>
            <% end %>
          </table>
