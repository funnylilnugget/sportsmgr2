<div>
  <br><h1>Edit Game</h1><br>
  <div class="grid-container">
    <div></div>
    <div class="card container" align="center">
  <%= form_for(@game) do |g|%>
    <h3>Game Name:</h3>
    <%= g.text_field :name, placeholder: "Game Name" %><br>

    <h3>Game Date:</h3>
    <%= g.date_field :game_date %><br>

    <h3>Home Team Score:</h3>
    <%= g.number_field :home_score %><br>

    <h3>Opposing Team Score:</h3>
    <%= g.number_field :visitor_score %><br>
<br>
    <%= g.submit 'Submit Game Edit' %><br>
    <br>
</div>
<div></div>
</div>
</div>
<% end %>
