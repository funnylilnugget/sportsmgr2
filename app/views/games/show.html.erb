<h1><%=@game.name%></h1>

    <div>
      <h3>Game Date:</h3>
      <p><%=@game.game_date%></p>
      <%@game.teams.each do |team|%>
      <%=team.name%>
      <%teams.teams_player.each do |player|%>
      <%=player.first_name%>
      <%end%>
      <%end%>

      <h3>Home Team Score:</h3>
      <% if @game.home_score > 0 %>
      <p><%=@game.home_score%></p>
    <% end %>

    <h3>Visiting Team Score:</h3>
    <% if @game.visitor_score > 0 %>
    <p><%=@game.visitor_score%></p>
  <% end %>
